@model IEnumerable<CarManagement.Car>

@{
    ViewBag.Title = "Home Page";
}

<h2>Home - Car Management</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mileage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Condition)
        </th>
        <th
            @Html.DisplayName("Approximate Mileage")
        </th>
        <th>
            @Html.DisplayName("MOT Due Date")
        </th>
        <th>
            @Html.DisplayName("Colour")
        </th>
        <th>
            @Html.DisplayName("Engine Size")
        </th>
        <th>
            @Html.DisplayName("Manufacturer")
        </th>
        <th>
            @Html.DisplayName("Model")
        </th>
        <th>
            @Html.DisplayName("Current Status")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mileage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Condition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApproxValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MOTDueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Engine.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CarID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CarID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CarID })
        </td>
    </tr>
}

</table>
